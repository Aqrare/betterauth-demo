# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/auth_demo

# Server
PORT=3000

# BetterAuth
# Refer https://www.better-auth.com/docs/installation#set-environment-variables
BETTER_AUTH_SECRET=generate-a-strong-random-secret-at-least-32-characters-long
BETTER_AUTH_URL=http://localhost:3000

# Frontend
FRONTEND_URL=http://localhost:5173

# Google OAuth (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Service (Get from Resend)
RESEND_API_KEY=your-resend-api-key
